#include "variables"
#! /bin/bash -e
#
# <% config %> script for <:=${PACKAGE}:>
#
<:=@COPYRIGHT:>//

set -o posix

source <:=${CONFMODULE}:>
db_version 2.0

case "${1}" in
    (configure|reconfigure)
	if egrep "\brequire[[:space:]]+[^)]*'mailcrypt-init\b" \
	    <:=$SSEL:> &>/dev/null; then
	    db_set <:=$PACKAGE:>/default false || true
	    db_text low <:=$PACKAGE:>/alreadydefault || true
	else
	    db_input medium <:=$PACKAGE:>/default || true
	fi
	db_go || true
    ;;
    (*) echo >&2 "${0##*/}/<:=${PACKAGE}:>:" \
	"Unknown argument: \"${1}\"."
    ;;
esac

exit 0
<:
