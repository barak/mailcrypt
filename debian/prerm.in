#include "variables"
#! /bin/bash -e
#
# <% postinst %> script for <:=${PACKAGE}:>
#
<:=@COPYRIGHT:>//

set -o posix

case "${1}" in
    (deconfigure|remove|upgrade|failed-upgrade)
    <:# remove <% info %> menu from <% info %> directory :>//
    <:=${IREMOVE}:> <:="${info}/${PACKAGE}.info.gz":>
    <:# deregister documentation with <% doc-base %> :>//
    <:=${DREMOVE}:> <:=${PACKAGE}:>
    <:# Emacs remove :>//
    <:=${EREMOVE}:> <:=${PACKAGE}:>
    ;;
    (*) echo >&2 "${0##*/}/<:=${PACKAGE}:>:" \
	"Unknown argument: \"${1}\"."
    exit 1
    ;;
esac

exit 0
