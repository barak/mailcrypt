#include "variables"
#! /bin/bash -e
#
# <% postinst %> script for <:=${PACKAGE}:>
#
<:=@COPYRIGHT:>//

set -o posix

case "${1}" in
    (deconfigure|remove|upgrade)
    <:# remove <% info %> menu from <% info %> directory :>//
    <:=${IREMOVE}:> <:="${info}/${PACKAGE}.info.gz":>
    <:# deregister documentation with <% doc-base %> :>//
    <:=${DREMOVE}:> <:=${PACKAGE}:>
    <:# Emacs remove :>//
    <:=${EREMOVE}:> <:=${PACKAGE}:>
    ;;
    (failed-upgrade)
    <:# Emacs install :>//
    <:=${EINSTALL}:> <:=${PACKAGE}:>
    <:# register documentation with <% doc-base %> :>//
    <:=${DINSTALL}:> <:=if($_="${docbase}/${PACKAGE}")=~tr|/|/|s:>
    <:# install <% info %> menu into <% info %> directory :>//
    <:=IINSTALL ():> <:="${info}/${PACKAGE}.info.gz":>
    ;;
    (*) echo >&2 "${0##*/}/<:=${PACKAGE}:>:" \
	"Unknown argument: \"${1}\"."
    ;;
esac

exit 0
